{% extends "base_admin.html.twig" %}

{% block title %}
    Blog Symfony | Gestion des articles
{% endblock %}

{% block body %}
    <table class="table table-striped vertical-border">
        <tr>
            {% for data in colonnes %}
                {% if data != 'id' %}
                    <th class="text-center">{{data|capitalize}}</th>            
                {% endif %}
            {% endfor %}
            <th class="text-center">Cat.</th>
            <th class="text-center">Nb Com.</th>
            <th class="text-center">Action</th>
        </tr>
        {% for article in articles %}
           <tr>
                <td class="align-middle text-center">{{ article.titre}}</td>
                <td class="w-25">{{ article.contenu}}</td>
                <td class="text-center"><img src="{{  asset('uploads/photos/' ~ article.photo) }}" alt="{{ article.photo}}" style="width: 300px"></td>
                <td class="align-middle text-center">{{ article.date|date('d/m/Y H:i')}}</td>
                <td class="align-middle text-center">{{ article.category.titre}}</td>
                <td class="align-middle text-center">{{article.commentaires|length}}</td>
                <td class="align-middle text-center"><a href="#" class="rounded bg-primary p-2 text-white d-flex justify-content-center align-items-center"><i class="bi bi-pencil-square"></i></a><a href="#" class="bg-danger p-2 mt-2 rounded text-white d-flex justify-content-center align-items-center"><i class="bi bi-trash-fill"></i></a></td>
           </tr> 
        {% endfor %}
    </table>

{% endblock %}
