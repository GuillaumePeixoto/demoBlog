{% extends "base_admin.html.twig" %}

{% block title %}
    Blog Symfony | Gestion des category
{% endblock %}

{% block body %}

    {% for message in app.flashes('success') %}
        <div class="col-6 mx-auto text-center alert alert-success my-5">
            {{ message }}
        </div>
    {% endfor %}
    {% for message in app.flashes('error') %}
        <div class="col-6 mx-auto text-center alert alert-danger my-5">
            {{ message }}
        </div>
    {% endfor %}

    <table class="table table-striped vertical-border" id="table-backoffice-category">
        <thead>
            <tr>
                {% for data in colonnes %}
                    {% if data != 'id' %}
                        <th class="text-center">{{data|capitalize}}</th>            
                    {% endif %}
                {% endfor %}
                <th class="text-center">Action</th>
            </tr>
        </thead>
        <tbody>
            {% for category in categorys %}
                <tr>
                    <td class="align-middle text-center">{{ category.titre}}</td>
                    <td class="align-middle text-center">{{ category.description}}</td>
                    <td class="align-middle text-center"><a href="{{ path('app_admin_add_category', {'id': category.id })}}" class="rounded bg-primary p-2 text-white d-flex justify-content-center align-items-center"><i class="bi bi-pencil-square"></i></a><a href="{{ path('app_admin_category_remove', {'id': category.id })}}" class="bg-danger p-2 mt-2 rounded text-white d-flex justify-content-center align-items-center"><i class="bi bi-trash-fill"></i></a></td>
                </tr> 
            {% endfor %}
        </tbody>
    </table>

{% endblock %}
