<!doctype html>
<html lang="en">
    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <!-- Bootstrap CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">


        {# DataTables #}
        <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.3/css/dataTables.bootstrap5.min.css"> 

        <script type="text/javascript" language="javascript" src="https://code.jquery.com/jquery-3.5.1.js"></script>

        <script type="text/javascript" language="javascript" src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>

        <script type="text/javascript" language="javascript" src="https://cdn.datatables.net/1.11.3/js/dataTables.bootstrap5.min.js"></script>

        <script src="{{ asset('js/dataTable.js') }}"></script>

        <style>
            .bd-placeholder-img {
                font-size: 1.125rem;
                text-anchor: middle;
                -webkit-user-select: none;
                -moz-user-select: none;
                user-select: none;
            }

            @media (min-width: 768px) {
                .bd-placeholder-img-lg {
                font-size: 3.5rem;
                }
            }
        </style>

        <link href="{{ asset('css/admin.css') }}" rel="stylesheet">

        <title> {% block title %} Blog Symfony | Back Office {% endblock %} </title>    

    </head>
    <body>
        <main>
            <div class="d-flex flex-column flex-shrink-0 p-3 text-white bg-dark position-fixed h-100" style="width: 20%;">
                <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">

                <span class="fs-4">BackOffice</span>
                </a>
                <hr>
                <ul class="nav nav-pills flex-column mb-auto">
                <li class="nav-item">
                    <a href="#" class="nav-link text-white d-flex align-items-center" aria-current="page">
                        <i class="bi bi-house-fill"></i>
                        <span class="ms-2">Home</span>
                    </a>
                </li>
                <li>
                    <a href="{{ path('app_admin_category_add') }}" class="nav-link text-white d-flex align-items-center">
                    <i class="bi bi-plus-circle"></i>
                    <span class="ms-2">Nouvelle Categorie</span>
                    </a>
                </li>
                <li>
                    <a href="{{ path('app_admin_categorys') }}" class="nav-link text-white d-flex align-items-center">
                    <i class="bi bi-bookmark-fill"></i>
                    <span class="ms-2">Categorie</span>
                    </a>
                </li>
                <li>
                    <a href="{{ path('app_admin_article_add') }}" class="nav-link text-white d-flex align-items-center">
                    <i class="bi bi-plus-circle"></i>
                    <span class="ms-2">Nouvel Article</span>
                    </a>
                </li>
                <li>
                    <a href="{{ path('app_admin_articles') }}" class="nav-link text-white d-flex align-items-center">
                    <i class="bi bi-newspaper"></i>
                    <span class="ms-2">Article</span>
                    </a>
                </li>
                <li>
                    <a href="{{ path('app_admin_comments') }}" class="nav-link text-white d-flex align-items-center">
                    <i class="bi bi-chat-left-quote-fill"></i>
                    <span class="ms-2">Commentaires</span>
                    </a>
                </li>
                <li>
                    <a href="{{ path('app_admin_users') }}" class="nav-link text-white d-flex align-items-center">
                    <i class="bi bi-person-circle"></i>
                    <span class="ms-2">Customers</span>
                    </a>
                </li>
                </ul>
                <hr>
                <div class="dropdown">
                <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                    <img src="https://github.com/mdo.png" alt="" width="32" height="32" class="rounded-circle me-2">
                    <strong>{{ app.user.nom }} {{ app.user.prenom }}</strong>
                </a>
                <ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="dropdownUser1">
                    <li><a class="dropdown-item" href="{{ path('profil') }}">Profile</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item" href="{{ path("blog") }}">Quitter</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item" href="{{ path('app_logout') }}">Deconnexion</a></li>
                </ul>
                </div>
            </div>


        <div class="p-2 conteneur-principal-admin" style="width: 80%; margin-left: 20%; overflow-y: auto">
            {% block body %}
                
            {% endblock %}
        </div>
    </main>
    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

    <!-- Option 2: Separate Popper and Bootstrap JS -->
